<section id="todos">

  <header>
    <h2>Editing: <%= @current_list_name %></h2>
    <ul>
      <li>
        <form action="/lists/<%= @id %>/destroy" method="post">
          <button class="delete">
            Delete List
          </button>
        </form>
      </li>
    </ul>
  </header>
</section>

<form action="/lists/<%= @id %>" method="post">
  <dl>
    <dt>
      <label for="list_name">Change the name for your list:</label>
    </dt>
    <dd>
      <input name="list_name" placeholder="List Name" type="text" value="<%= @submitted_name || @current_list_name %>" autofocus="autofocus">
    </dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Save">
    <a href="/lists/<%= @id %>">Cancel</a>
  </fieldset>
</form>
